<%- include('../partials/header') %>

<div class="container">
    <div class="dashboard-header">
        <h1 class="page-title">Request Details #<%= request.id %></h1>
        <a href="/officer/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <!-- Request Overview -->
    <div class="request-overview">
        <div class="overview-card">
            <h3>Citizen Information</h3>
            <div class="info-grid">
                <div class="info-item">
                    <label>Name:</label>
                    <span><%= request.citizen_name %></span>
                </div>
                <div class="info-item">
                    <label>National ID:</label>
                    <span><%= request.national_id %></span>
                </div>
                <% if (request.date_of_birth) { %>
                <div class="info-item">
                    <label>Date of Birth:</label>
                    <span><%= new Date(request.date_of_birth).toLocaleDateString() %></span>
                </div>
                <% } %>
                <div class="info-item">
                    <label>Contact Info:</label>
                    <span><%= request.contact_info || 'Not provided' %></span>
                </div>
            </div>
        </div>
        
        <div class="overview-card">
            <h3>Service Information</h3>
            <div class="info-grid">
                <div class="info-item">
                    <label>Service:</label>
                    <span><%= request.service_name %></span>
                </div>
                <div class="info-item">
                    <label>Department:</label>
                    <span><%= request.department_name %></span>
                </div>
                <div class="info-item">
                    <label>Fee:</label>
                    <span>$<%= request.fee ? parseFloat(request.fee).toFixed(2) : '0.00' %></span>
                </div>
                <div class="info-item">
                    <label>Requirements:</label>
                    <span><%= request.requirements || 'None specified' %></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Update Section -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Review Application</h2>
            <span class="status-badge status-<%= request.status %>">
                <%= request.status.replace('_', ' ') %>
            </span>
        </div>
        
        <form action="/officer/request/<%= request.id %>/status" method="POST">
            <div class="form-group">
                <label for="status" class="form-label">Update Status</label>
                <select id="status" name="status" class="form-input" required>
                    <option value="under_review" <%= request.status === 'under_review' ? 'selected' : '' %>>Under Review</option>
                    <option value="approved" <%= request.status === 'approved' ? 'selected' : '' %>>Approved</option>
                    <option value="rejected" <%= request.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="officer_notes" class="form-label">Officer Notes</label>
                <textarea id="officer_notes" name="officer_notes" class="form-input form-textarea" 
                          placeholder="Add any notes or comments about this application..." 
                          rows="4"><%= request.notes || '' %></textarea>
            </div>
            
            <div class="action-buttons">
                <button type="submit" class="btn btn-primary">Update Status</button>
            </div>
        </form>
    </div>

    <!-- Documents Section -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Uploaded Documents</h2>
            <span class="badge"><%= documents.length %> files</span>
        </div>
        
        <% if (documents.length > 0) { %>
            <div class="documents-grid">
                <% documents.forEach(doc => { %>
                    <div class="document-card">
                        <div class="document-icon">ðŸ“„</div>
                        <div class="document-info">
                            <h4><%= doc.filename %></h4>
                            <p>Uploaded: <%= new Date(doc.uploaded_at).toLocaleDateString() %></p>
                        </div>
                        <div class="document-actions">
                            <a href="/uploads/<%= doc.filepath %>" target="_blank" class="btn btn-secondary">View</a>
                            <a href="/uploads/<%= doc.filepath %>" download class="btn btn-primary">Download</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-center p-3">No documents uploaded for this application.</p>
        <% } %>
    </div>

    <!-- Payment Information -->
    <% if (payment) { %>
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Payment Information</h2>
        </div>
        <div class="payment-info">
            <div class="info-item">
                <label>Amount:</label>
                <span>$<%= payment.amount %></span>
            </div>
            <div class="info-item">
                <label>Status:</label>
                <span class="status-badge status-<%= payment.status === 'completed' ? 'approved' : payment.status %>">
                    <%= payment.status %>
                </span>
            </div>
            <% if (payment.payment_date) { %>
            <div class="info-item">
                <label>Payment Date:</label>
                <span><%= new Date(payment.payment_date).toLocaleDateString() %></span>
            </div>
            <% } %>
        </div>
    </div>
    <% } %>

    <!-- Request History -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Request History</h2>
        </div>
        <div class="timeline">
            <% history.forEach(event => { %>
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <h4><%= event.action.replace('_', ' ') %></h4>
                        <p><%= new Date(event.date).toLocaleString() %></p>
                        <% if (event.officer_name) { %>
                            <p>By: <%= event.officer_name %></p>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<style>
    .request-overview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .overview-card {
        background-color: white;
        border-radius: var(--radius);
        padding: 1.5rem;
        box-shadow: var(--shadow);
    }
    
    .overview-card h3 {
        margin-bottom: 1rem;
        color: var(--dark);
        border-bottom: 2px solid var(--gray-light);
        padding-bottom: 0.5rem;
    }
    
    .info-grid {
        display: grid;
        gap: 1rem;
    }
    
    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f1f5f9;
    }
    
    .info-item label {
        font-weight: 500;
        color: var(--secondary);
    }
    
    .info-item span {
        color: var(--dark);
    }
    
    .documents-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
    }
    
    .document-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        border: 1px solid var(--gray-light);
        border-radius: var(--radius);
    }
    
    .document-icon {
        font-size: 2rem;
    }
    
    .document-info {
        flex: 1;
    }
    
    .document-info h4 {
        margin-bottom: 0.25rem;
    }
    
    .document-info p {
        color: var(--secondary);
        font-size: 0.875rem;
    }
    
    .payment-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        padding: 1rem;
    }
    
    .timeline {
        position: relative;
        padding: 1rem 0;
    }
    
    .timeline-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }
    
    .timeline-marker {
        width: 12px;
        height: 12px;
        background-color: var(--primary);
        border-radius: 50%;
        margin-right: 1rem;
        margin-top: 0.25rem;
        flex-shrink: 0;
    }
    
    .timeline-content {
        flex: 1;
    }
    
    .timeline-content h4 {
        text-transform: capitalize;
        margin-bottom: 0.25rem;
        color: var(--dark);
    }
    
    .timeline-content p {
        color: var(--secondary);
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }
</style>

<%- include('../partials/footer') %>